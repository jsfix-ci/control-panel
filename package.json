{
  "name": "asylum-connect-admin-control-panel",
  "private": true,
  "scripts": {
    "local": "REACT_APP_APP_ENV=local npm run start",
    "local-background":"pm2 --name Control-Panel start npm -- start",
    "prod": "REACT_APP_APP_ENV=production npm start",
    "dev": "npm run start",
    "start": "react-scripts start",
    "build": "CI=false react-scripts build",
    "test": "react-scripts test",
    "serve": "node src/server",
    "cypress:open": "cypress open --config-file ./cypress.json"
  },
  "dependencies": {
    "@chakra-ui/core": "^0.7.0",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "autosuggest-highlight": "^3.1.1",
    "axios": "^0.21.1",
    "emotion-theming": "^10.0.27",
    "express": "^4.17.1",
    "formik": "^2.1.4",
    "js-cookie": "^2.2.1",
    "lodash": "^4.17.15",
    "react": "^16.13.1",
    "react-autosuggest": "^10.0.4",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.1",
    "react-select": "^3.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@testing-library/user-event": "^10.0.2",
    "cypress": "^7.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "mochawesome": "^6.2.2",
    "mochawesome-merge": "^4.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nyc": {
		"sourceMap": false,
		"instrument": false,
		"excludeAfterRemap": false,
		"all": true,
		"include": [
			"**/src/*"
		],
		"report-dir": "cypressCoverage",
		"reporter": [
			"html",
			"json",
			"lcov"
		]
	},
  "engines": {
    "node": "12.x"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "react/prop-types": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,md} **/*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true
  }
}
